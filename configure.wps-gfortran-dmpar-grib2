.SUFFIXES: .F .f .c .o

SHELL           	=       /bin/sh

COMPRESSION_LIBS	=	-ljasper -lpng -lz

COMPRESSION_INC		=	

NCARG_LIBS		=	-L$(NCARG_LIB) -lncarg -lncarg_gks -lncarg_c \
				-lX11

NCARG_LIBS2		=

FDEFS			=	-DUSE_JPEG2000 -DUSE_PNG

# Listing of options that are usually independent of machine type.
# When necessary, these are over-ridden by each architecture.

ARFLAGS			=	

PERL			=	perl

RANLIB			=	echo

WRF_DIR			=	../WRFV3

#### Architecture specific settings ####

# Settings for PC Linux i486 i586 i686, gfortran compiler,	DM PARALLEL
#
FC              =       mpif90
SFC             =       gfortran
FFLAGS          =       -ffree-form -O -fno-second-underscore $(RPM_OPT_FLAGS)
F77FLAGS        =       -ffixed-form -O -fno-second-underscore $(RPM_OPT_FLAGS)
FNGFLAGS        =       $(FFLAGS)
LDFLAGS         =       $(RPM_OPT_FLAGS)
CC              =       mpicc
SCC             =       gcc
CFLAGS          =       $(RPM_OPT_FLAGS)
CPP             =       /usr/bin/cpp -C -P -traditional
CPPFLAGS        =       -D_UNDERSCORE -DBYTESWAP -DLINUX -DIO_NETCDF -DBIT32 -D_MPI
RANLIB          =       ranlib

###########################################################
#
#	Macros, these should be generic for all machines

LN		=	ln -sf
MAKE		=	make -i -r
RM		= 	/bin/rm -f
CP		= 	/bin/cp
AR		=	ar ru

WRF_INCLUDE	=	-I$(WRF_DIR)/external/io_netcdf \
			-I$(WRF_DIR)/external/io_grib_share \
			-I$(WRF_DIR)/external/io_grib1 \
			-I$(WRF_DIR)/external/io_int \
			-I$(WRF_DIR)/inc

WRF_LIB         =       -L$(WRF_DIR)/external/io_grib1 -lio_grib1 \
                        -L$(WRF_DIR)/external/io_grib_share -lio_grib_share \
                        -L$(WRF_DIR)/external/io_int -lwrfio_int \
                        -L$(WRF_DIR)/external/io_netcdf -lwrfio_nf \
                        -L$(NETCDF)/lib -lnetcdff -lnetcdf


.IGNORE:
.SUFFIXES: .c .f .F .o

#	There is probably no reason to modify these rules

.c.o:
	$(RM) $@
	$(CC) $(CPPFLAGS) $(CFLAGS) -c $<	

.f.o:
	$(RM) $@ $*.mod
	$(FC) $(F77FLAGS) -c $< $(WRF_INCLUDE)

.F.o:
	$(RM) $@ $*.mod
	$(CPP) $(CPPFLAGS) $(FDEFS) $(WRF_INCLUDE) $< > $*.f90
	$(FC) $(FFLAGS) -c $*.f90 $(WRF_INCLUDE)
#	$(RM) $*.f90
